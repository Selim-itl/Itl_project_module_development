<?xml version="1.0" encoding="utf-8"?>

<odoo>

    <record id="form_project_leader_view" model="ir.ui.view">
        <field name="name">project.leader.form</field>
        <field name="model">project.leader.designation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="job_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tree_project_leader_view" model="ir.ui.view">
        <field name="name">project.leader.tree</field>
        <field name="model">project.leader.designation</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="job_id"/>
            </tree>
        </field>
    </record>

    <record id="action_project_leader_view" model="ir.actions.act_window">
        <field name="name">Leader's Designations</field>
        <field name="res_model">project.leader.designation</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            action="action_project_leader_view"
            id="project_menu_leader"
            name="Leader's Designations"
            parent="project.menu_project_config"
            sequence="70"/>

</odoo>